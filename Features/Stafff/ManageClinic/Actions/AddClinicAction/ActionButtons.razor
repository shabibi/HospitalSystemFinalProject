@code {
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public bool FormIsValid { get; set; }
}

<MudItem xs="12" Class="d-flex justify-space-between mt-4">
    <!-- Submit and Cancel Buttons -->
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSubmit" Disabled="!FormIsValid">
        Submit
    </MudButton>
    <MudButton Variant="Variant.Text" Color="Color.Default" OnClick="OnCancel">
        Cancel
    </MudButton>
</MudItem>
